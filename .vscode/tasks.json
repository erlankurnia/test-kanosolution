{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cd",
      "type": "shell",
      "command": "cd",
      "args": [
        "\"${workspaceFolder}\""
      ]
    },
    {
      "label": "Clear Screen",
      "type": "shell",
      "command": "cls"
    },
    {
      "label": "Create TypeScript file",
      "type": "shell",
      "command": "echo console.log('TypeScript Project e Youkoso!'); > ${input:fileName}.ts"
    },
    {
      "label": "Install Package (Global)",
      "type": "shell",
      "command": "npm",
      "args": [
        "install",
        "${input:packageName}",
        "-g"
      ]
    },
    {
      "label": "Link Package (Local)",
      "type": "shell",
      "command": "npm-link-save",
      "args": [
        "${input:packageName}"
      ]
    },
    {
      "label": "Link Package (Local/Dev)",
      "type": "shell",
      "command": "npm-link-save",
      "args": [
        "${input:packageName}",
        "-D"
      ]
    },
    {
      "label": "NPM Init",
      "type": "shell",
      "command": " mkdir src build && cd src && echo console.log('TypeScript Project e Youkoso!'); > index.ts",
      "args": [
        "&&",
        "cd",
        "..",
        "&&",
        "npm",
        "init"
      ]
    },
    {
      "label": "TypeScript Init",
      "type": "shell",
      "command": "tsc --init",
      "dependsOn": [
        "NPM Init"
      ]
    },
    {
      "label": "Express New Project",
      "type": "shell",
      "command": "express",
      "args": [
        "--view=${input:htmlEngine}",
        "&&",
        "npm",
        "link"
      ]
    },
    {
      "label": "Run Node",
      "type": "shell",
      "command": "npm run start",
      "dependsOn": "Clear Screen",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Nodemon",
      "type": "shell",
      "command": "nodemon",
      "args": [
        "main"
        // "${file}"
      ]
    },
    {
      "label": "Compile TypeScript",
      "type": "shell",
      "command": "del /Q/S build\\**\\* && tsc"
    },
    {
      "label": "Monitor Compile TypeScript",
      "type": "shell",
      "command": "del /Q/S build\\**\\* && tsc -w"
    },
    {
      "label": "Run Opened TypeScript File (Dev)",
      "type": "shell",
      "command": "ts-node ${fileBasenameNoExtension}.ts"
    }
  ],
  "inputs": [
    {
      "id": "htmlEngine",
      "type": "pickString",
      "description": "Choose HTML Engine for this Project",
      "default": "ejs",
      "options": [
        "ejs",
        "pug",
        "hbs",
        "hjs",
        "twig",
        "vash"
      ]
    },
    {
      "id": "packageName",
      "type": "promptString",
      "description": "Package Name"
    },
    {
      "id": "fileName",
      "type": "promptString",
      "description": "File Name (no file extension)",
      "default": "index"
    },
    {
      "id": "projectName",
      "type": "promptString",
      "description": "Project Name",
      "default": ""
    }
  ]
}